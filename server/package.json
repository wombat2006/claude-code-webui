{
  "name": "claude-code-webui-server",
  "version": "1.0.0",
  "description": "Backend server for Claude Code WebUI",
  "main": "dist/index.js",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=2048 --max-semi-space-size=128' tsc",
    "start": "NODE_OPTIONS='--max-old-space-size=512 --max-semi-space-size=32' node --expose-gc dist/index.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=1024 --max-semi-space-size=64' DISABLE_MCP_AUTOSTART=1 node -r ts-node/register --watch src/index.ts",
    "watch": "NODE_OPTIONS='--max-old-space-size=1024 --max-semi-space-size=64' tsc --watch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/lib-storage": "^3.883.0",
    "@google/generative-ai": "^0.24.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/ioredis": "^4.28.10",
    "@types/node-fetch": "^2.6.13",
    "@types/redis": "^4.0.10",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^5.19.1",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
